@page "/DrawSettings"
@rendermode InteractiveServer
@inject IJSRuntime JSRuntime

<style>
    #mapdata
    {
        width:300px;
        height:400px;
        overflow-x:hidden;
        overflow-y:scroll;
        word-wrap: break-word;
    }
</style>

<h3>Draw Settings</h3>

<div id="map">
    <div>
        <h5>Presets:</h5>
        <input type="submit" @onclick="() => LoadModes(WebService.LoadDefaultDraw)" value="Default">
        <input type="submit" @onclick="() => LoadModes(WebService.LoadTreasureMapDraw)" value="Oasis">
        <input type="submit" @onclick="() => LoadModes(WebService.LoadOpenStreetMapDraw)" value="OpenStreetMap">
        <input type="submit" @onclick="() => LoadModes(WebService.LoadGoogleMapDraw)" value="Google Maps">
    </div>
    <br>
    <h5>Edit JSON:</h5>
    <textarea id="mapdata" @bind="WebService.DrawSettingsEditing"></textarea>
    <br>
    <input type="submit" @onclick="@SaveDrawSettings" value="Save">
</div>

