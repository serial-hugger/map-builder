@page "/FeatureSettings"
@rendermode InteractiveServer
@inject IJSRuntime JSRuntime

<style>
    #mapdata
    {
        width:300px;
        height:400px;
        overflow-x:hidden;
        overflow-y:scroll;
        word-wrap: break-word;
    }
</style>

<h3>Feature Settings</h3>

<div id="map">
    <div>
        <h5>Presets:</h5>
        <input type="submit" @onclick="() => LoadModes(WebService.LoadDefaultFeature)" value="Default">
        <input type="submit" @onclick="() => LoadModes(WebService.LoadMinimalFeature)" value="Minimal">
        <input type="submit" @onclick="() => LoadModes(WebService.LoadTransitFeature)" value="Transit">
    </div>
    <br>
    <h5>Edit JSON:</h5>
    <textarea id="mapdata" @bind="WebService.FeatureSettingsEditing"></textarea>
    <br>
    <input type="submit" @onclick="@SaveFeatureSettings" value="Save">
    <br>
    <i>When saved the "generation_version" will<br>automatically be set to a new version.</i>
</div>

